# https://ghostty.org/docs/config

# Theme
theme = Catppuccin Mocha

# Font
font-family = "Jetbrains Mono"
font-style = Regular
font-size = 11

# Window
window-padding-x = 20,20
window-padding-y = 20,20
window-decoration = none
window-colorspace = "display-p3"
background-opacity = 99
background-blur-radius = 100
confirm-close-surface=false
resize-overlay = never

# Cursor stlying
cursor-style = "block"
cursor-style-blink = false
shell-integration-features = no-cursor,sudo,no-title
mouse-hide-while-typing = true
auto-update = off

confirm-close-surface = false
shell-integration = fish

# Keyboard bindings
keybind = ctrl+t=toggle_fullscreen
keybind = ctrl+u=clear_screen
keybind = ctrl+q=close_surface

keybind = ctrl+left=goto_split:left
keybind = ctrl+shift+left=new_split:left
keybind = ctrl+up=goto_split:up
keybind = ctrl+shift+up=new_split:up
keybind = ctrl+down=goto_split:down
keybind = ctrl+shift+down=new_split:down
keybind = ctrl+right=goto_split:right
keybind = ctrl+shift+right=new_split:right

keybind = alt+left=resize_split:left,10
keybind = alt+right=resize_split:right,10
keybind = alt+up=resize_split:up,10
keybind = alt+down=resize_split:down,10
